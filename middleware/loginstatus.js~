
exports.user = { username: '', 
                 status: 0, 
                 set: function(req) { this.username = req.session.user.name; this.status = 1; console.log(req.session.user) },
                 unset: function() { this.username = ''; this.status = ''; },
                 check: function(req) { (req.session.user != undefined) ? this.set(req) : this.status = 0; }
               };

